<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="Backbone.Survey.Title" parent="">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:minHeight">@dimen/rsb_item_size_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/rsb_margin_left</item>
        <item name="android:paddingRight">@dimen/rsb_margin_right</item>
        <item name="android:paddingTop">@dimen/rsb_padding_medium</item>
        <item name="android:paddingBottom">@dimen/rsb_padding_medium</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/rsb_text_size_title</item>
    </style>

    <style name="Backbone.Survey.Summary" parent="">
        <item name="android:layout_marginTop">@dimen/rsb_padding_wedge</item>
        <item name="android:layout_marginBottom">@dimen/rsb_padding_small</item>
        <item name="android:paddingLeft">@dimen/rsb_margin_left</item>
        <item name="android:paddingRight">@dimen/rsb_margin_right</item>
        <item name="android:paddingTop">@dimen/rsb_padding_wedge</item>
        <item name="android:paddingBottom">@dimen/rsb_padding_small</item>
    </style>

    <style name="Backbone.Survey.Summary.Detail" parent="">
        <item name="android:layout_marginTop">@dimen/rsb_padding_wedge</item>
        <item name="android:layout_marginBottom">@dimen/rsb_padding_small</item>
        <item name="android:paddingLeft">@dimen/rsb_margin_left</item>
        <item name="android:paddingRight">@dimen/rsb_margin_right</item>
        <item name="android:paddingTop">@dimen/rsb_padding_wedge</item>
        <item name="android:paddingBottom">@dimen/rsb_padding_small</item>
        <item name="android:textSize">@dimen/rsb_text_size_detail</item>
    </style>

    <style name="Backbone.Survey.Summary.Link">
        <item name="android:layout_marginTop">@dimen/rsb_padding_wedge</item>
        <item name="android:paddingLeft">@dimen/rsb_margin_left</item>
        <item name="android:paddingRight">@dimen/rsb_margin_right</item>
        <item name="android:paddingTop">@dimen/rsb_padding_wedge</item>
        <item name="android:paddingBottom">@dimen/rsb_padding_small</item>
    </style>

    <style name="Widget.Backbone.IconTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">56dp</item>
        <item name="tabIconColor">@android:color/white</item>
        <item name="tabIconIndicatorColor">?attr/colorAccent</item>
        <item name="tabTextColor">@color/rsb_white_60</item>
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>

    <style name="Widget.Backbone.TabLayout.Chart" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="Widget.Backbone.SubmitBar" parent="">
        <item name="android:background">@color/rsb_submit_bar_gray</item>
        <item name="positiveActionTitle">@string/rsb_next</item>
        <item name="negativeActionTitle">@string/rsb_step_skip</item>
        <item name="positiveActionColor">?attr/colorAccent</item>
        <item name="negativeActionColor">@color/rsb_submit_bar_negative</item>
    </style>


    <style name="TextAppearance.Widget.Backbone.EmptyView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Widget.Backbone.Chart.Title" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RsbLearnTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="RsbLearnItemLogo">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="StudyOverviewTabStyle">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextColor">#6FFF</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="StudyOverviewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Base.Button.Backbone.Onboarding" parent="@style/Widget.AppCompat.Button" tools:ignore="ResourceName">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Backbone.Onboarding" parent="@style/Base.Button.Backbone.Onboarding" tools:ignore="ResourceName" />


</resources>
